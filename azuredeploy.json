{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "metadata": {
        "name": "VM Securonix Oracle Linux 8",
        "description": "Template para criação de VM Oracle Linux 8 com configurações específicas para Securonix",
        "author": "Mathews Buzetti"
    },
    "parameters": {
        "vmName": {
            "type": "string",
            "defaultValue": "VM-RIN",
            "metadata": {
                "description": "Nome da máquina virtual"
            }
        },
        "vmSize": {
            "type": "string",
            "defaultValue": "Standard_D4s_v3",
            "metadata": {
                "description": "Tamanho da VM"
            }
        },
        "adminUsername": {
            "type": "string",
            "metadata": {
                "description": "Nome do usuário administrador"
            }
        },
        "authenticationType": {
            "type": "string",
            "defaultValue": "password",
            "allowedValues": [
                "password",
                "sshPublicKey"
            ],
            "metadata": {
                "description": "Tipo de autenticação para a VM"
            }
        },
        "adminPasswordOrKey": {
            "type": "securestring",
            "metadata": {
                "description": "Senha ou chave SSH para o usuário administrador"
            }
        },
        "dnsLabelPrefix": {
            "type": "string",
            "defaultValue": "[toLower(format('{0}-{1}', parameters('vmName'), uniqueString(resourceGroup().id)))]",
            "metadata": {
                "description": "Nome DNS único"
            }
        },
        "virtualNetworkName": {
            "type": "string",
            "defaultValue": "vnet-rin",
            "metadata": {
                "description": "Nome da Rede Virtual"
            }
        },
        "subnetName": {
            "type": "string",
            "defaultValue": "subnet-rin",
            "metadata": {
                "description": "Nome da Subnet"
            }
        },
        "networkSecurityGroupName": {
            "type": "string",
            "defaultValue": "nsg-rin",
            "metadata": {
                "description": "Nome do Grupo de Segurança de Rede"
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Localização dos recursos"
            }
        },
        "osDiskType": {
            "type": "string",
            "defaultValue": "StandardSSD_LRS",
            "metadata": {
                "description": "Tipo do disco do sistema operacional"
            }
        },
        "osDiskSizeGB": {
            "type": "int",
            "defaultValue": 100,
            "metadata": {
                "description": "Tamanho do disco do sistema operacional em GB"
            }
        },
        "dataDiskType": {
            "type": "string",
            "defaultValue": "Premium_LRS",
            "metadata": {
                "description": "Tipo do disco de dados"
            }
        },
        "dataDiskSizeGB": {
            "type": "int",
            "defaultValue": 300,
            "metadata": {
                "description": "Tamanho do disco de dados em GB"
            }
        }
    },
    "variables": {
        "nicName": "[format('{0}-nic', parameters('vmName'))]",
        "addressPrefix": "10.0.0.0/16",
        "subnetPrefix": "10.0.0.0/24",
        "publicIPAddressName": "[format('{0}-ip', parameters('vmName'))]",
        "osDiskName": "[format('{0}-osdisk', parameters('vmName'))]",
        "dataDiskName": "[format('{0}-datadisk', parameters('vmName'))]",
        "linuxConfiguration": {
            "disablePasswordAuthentication": true,
            "ssh": {
                "publicKeys": [
                    {
                        "path": "[format('/home/{0}/.ssh/authorized_keys', parameters('adminUsername'))]",
                        "keyData": "[parameters('adminPasswordOrKey')]"
                    }
                ]
            }
        },
        "customData": "#!/bin/bash\n\n# Aguarda o disco ficar disponível\nwhile [ ! -b /dev/sdb ]; do\n    sleep 1\ndone\n\n# Inicializa o disco\npvcreate /dev/sdb\n\n# Cria grupo de volumes\nvgcreate vg_system /dev/sdb\n\n# Cria volumes lógicos\nlvcreate -L 9.5G -n vg_system_swap vg_system\nlvcreate -L 20G -n vg_system_root vg_system\nlvcreate -L 10G -n vg_system_tmp vg_system\nlvcreate -L 10G -n vg_system_var vg_system\nlvcreate -L 20G -n vg_system_home vg_system\nlvcreate -L 10G -n vg_system_opt vg_system\n\n# Formata os volumes\nmkswap /dev/vg_system/vg_system_swap\nmkfs.xfs /dev/vg_system/vg_system_root\nmkfs.xfs /dev/vg_system/vg_system_tmp\nmkfs.xfs /dev/vg_system/vg_system_var\nmkfs.xfs /dev/vg_system/vg_system_home\nmkfs.xfs /dev/vg_system/vg_system_opt\n\n# Cria pontos de montagem\nmkdir -p /mnt/root\nmkdir -p /mnt/tmp\nmkdir -p /mnt/var\nmkdir -p /mnt/home/securonix\nmkdir -p /mnt/opt\n\n# Monta os volumes\nmount /dev/vg_system/vg_system_root /mnt/root\nmount /dev/vg_system/vg_system_tmp /mnt/tmp\nmount /dev/vg_system/vg_system_var /mnt/var\nmount /dev/vg_system/vg_system_home /mnt/home/securonix\nmount /dev/vg_system/vg_system_opt /mnt/opt\n\n# Adiciona entradas ao fstab\necho '/dev/vg_system/vg_system_swap swap swap defaults 0 0' >> /etc/fstab\necho '/dev/vg_system/vg_system_root /root xfs defaults 0 0' >> /etc/fstab\necho '/dev/vg_system/vg_system_tmp /tmp xfs defaults 0 0' >> /etc/fstab\necho '/dev/vg_system/vg_system_var /var xfs defaults 0 0' >> /etc/fstab\necho '/dev/vg_system/vg_system_home /home/securonix xfs defaults 0 0' >> /etc/fstab\necho '/dev/vg_system/vg_system_opt /opt xfs defaults 0 0' >> /etc/fstab\n\n# Ativa a swap\nswapon /dev/vg_system/vg_system_swap"
    },
    "resources": [
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2021-02-01",
            "name": "[variables('publicIPAddressName')]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "Basic"
            },
            "properties": {
                "publicIPAllocationMethod": "Dynamic",
                "dnsSettings": {
                    "domainNameLabel": "[parameters('dnsLabelPrefix')]"
                }
            }
        },
        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2021-02-01",
            "name": "[parameters('networkSecurityGroupName')]",
            "location": "[parameters('location')]",
            "properties": {
                "securityRules": [
                    {
                        "name": "SSH",
                        "properties": {
                            "priority": 1000,
                            "protocol": "Tcp",
                            "access": "Allow",
                            "direction": "Inbound",
                            "sourceAddressPrefix": "*",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "*",
                            "destinationPortRange": "22"
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2021-02-01",
            "name": "[parameters('virtualNetworkName')]",
            "location": "[parameters('location')]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[variables('addressPrefix')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[parameters('subnetName')]",
                        "properties": {
                            "addressPrefix": "[variables('subnetPrefix')]",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('networkSecurityGroupName'))]"
                            }
                        }
                    }
                ]
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('networkSecurityGroupName'))]"
            ]
        },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2021-02-01",
            "name": "[variables('nicName')]",
            "location": "[parameters('location')]",
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('publicIPAddressName'))]"
                            },
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetworkName'), parameters('subnetName'))]"
                            }
                        }
                    }
                ]
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/publicIPAddresses', variables('publicIPAddressName'))]",
                "[resourceId('Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]"
            ]
        },
        {
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2021-03-01",
            "name": "[parameters('vmName')]",
            "location": "[parameters('location')]",
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('vmSize')]"
                },
                "osProfile": {
                    "computerName": "[parameters('vmName')]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPasswordOrKey')]",
                    "linuxConfiguration": "[if(equals(parameters('authenticationType'), 'password'), null(), variables('linuxConfiguration'))]",
                    "customData": "[base64(variables('customData'))]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "Oracle",
                        "offer": "Oracle-Linux",
                        "sku": "ol85-lvm",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "[variables('osDiskName')]",
                        "createOption": "FromImage",
                        "managedDisk": {
                            "storageAccountType": "[parameters('osDiskType')]"
                        },
                        "diskSizeGB": "[parameters('osDiskSizeGB')]"
                    },
                    "dataDisks": [
                        {
                            "name": "[variables('dataDiskName')]",
                            "diskSizeGB": "[parameters('dataDiskSizeGB')]",
                            "lun": 0,
                            "createOption": "Empty",
                            "managedDisk": {
                                "storageAccountType": "[parameters('dataDiskType')]"
                            }
                        }
                    ]
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('nicName'))]"
                        }
                    ]
                }
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', variables('nicName'))]"
            ]
        }
    ],
    "outputs": {
        "adminUsername": {
            "type": "string",
            "value": "[parameters('adminUsername')]"
        },
        "hostname": {
            "type": "string",
            "value": "[reference(variables('publicIPAddressName')).dnsSettings.fqdn]"
        },
        "sshCommand": {
            "type": "string",
            "value": "[format('ssh {0}@{1}', parameters('adminUsername'), reference(variables('publicIPAddressName')).dnsSettings.fqdn)]"
        }
    }
}
